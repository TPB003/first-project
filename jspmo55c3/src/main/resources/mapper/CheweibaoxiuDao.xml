<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.CheweibaoxiuDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.CheweibaoxiuEntity" id="cheweibaoxiuMap">
        <result property="cheweibianhao" column="cheweibianhao"/>
        <result property="cheweimingcheng" column="cheweimingcheng"/>
        <result property="cheweileixing" column="cheweileixing"/>
        <result property="weizhi" column="weizhi"/>
        <result property="baoxiuneirong" column="baoxiuneirong"/>
        <result property="baoxiushijian" column="baoxiushijian"/>
        <result property="zhanghao" column="zhanghao"/>
        <result property="xingming" column="xingming"/>
        <result property="sfsh" column="sfsh"/>
        <result property="shhf" column="shhf"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.CheweibaoxiuVO" >
		SELECT * FROM cheweibaoxiu  cheweibaoxiu         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.CheweibaoxiuVO" >
		SELECT  cheweibaoxiu.* FROM cheweibaoxiu  cheweibaoxiu 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.CheweibaoxiuView" >

		SELECT  cheweibaoxiu.* FROM cheweibaoxiu  cheweibaoxiu 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.CheweibaoxiuView" >
		SELECT * FROM cheweibaoxiu  cheweibaoxiu <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, sum(${params.yColumn}) total FROM cheweibaoxiu
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM cheweibaoxiu
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM cheweibaoxiu
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM cheweibaoxiu
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>
    
    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM cheweibaoxiu
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>
</mapper>
